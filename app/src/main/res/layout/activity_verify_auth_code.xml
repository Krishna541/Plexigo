<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground">

    <ImageButton
        android:id="@+id/imgBtnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:background="@null"
        android:padding="15dp"
        android:src="@drawable/back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTitleVerification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppins"
        android:text="@string/linktoTv"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgBtnBack" />

    <TextView
        android:id="@+id/txtVerificationMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="40dp"
        android:fontFamily="@font/poppins"
        android:text="@string/linktoTvMsg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTitleVerification" />

    <RelativeLayout
        android:id="@+id/layoutTncSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/edtOtp1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtVerificationMessage">

        <TextView
            android:id="@+id/txtTncMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/poppins" />

        <TextView
            android:id="@+id/txtTncLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTncMessage"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/poppins" />

    </RelativeLayout>

    <EditText
        android:id="@+id/edtOtp1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_edit_text_white"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:padding="10dp"
        android:textColor="@color/primarydark"
        app:layout_constraintEnd_toStartOf="@id/edtOtp2"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutTncSignup" />

    <EditText
        android:id="@+id/edtOtp2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_edit_text_white"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:padding="10dp"
        android:textColor="@color/primarydark"
        app:layout_constraintBottom_toBottomOf="@id/edtOtp1"
        app:layout_constraintEnd_toStartOf="@id/edtOtp3"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/edtOtp1"
        app:layout_constraintTop_toTopOf="@id/edtOtp1" />

    <EditText
        android:id="@+id/edtOtp3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_edit_text_white"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:padding="10dp"
        android:textColor="@color/primarydark"
        app:layout_constraintBottom_toBottomOf="@id/edtOtp1"
        app:layout_constraintEnd_toStartOf="@id/edtOtp4"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/edtOtp2"
        app:layout_constraintTop_toTopOf="@id/edtOtp1" />

    <EditText
        android:id="@+id/edtOtp4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_edit_text_white"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:padding="10dp"
        android:textColor="@color/primarydark"
        app:layout_constraintBottom_toBottomOf="@id/edtOtp1"
        app:layout_constraintEnd_toStartOf="@id/edtOtp5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/edtOtp3"
        app:layout_constraintTop_toTopOf="@id/edtOtp1" />

    <EditText
        android:id="@+id/edtOtp5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_edit_text_white"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:padding="10dp"
        android:textColor="@color/primarydark"
        app:layout_constraintBottom_toBottomOf="@id/edtOtp1"
        app:layout_constraintEnd_toStartOf="@id/edtOtp6"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/edtOtp4"
        app:layout_constraintTop_toTopOf="@id/edtOtp1" />

    <EditText
        android:id="@+id/edtOtp6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_edit_text_white"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:padding="10dp"
        android:textColor="@color/primarydark"
        app:layout_constraintBottom_toBottomOf="@id/edtOtp1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/edtOtp5"
        app:layout_constraintTop_toTopOf="@id/edtOtp1" />


    <TextView
        android:id="@+id/txtDidNotReceiveOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/poppins"
        android:inputType="number"
        android:text="@string/did_not_received_the_otp"
        android:textColor="@color/textColor"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtOtp1" />

    <TextView
        android:id="@+id/txtResendOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins"
        android:text="@string/resend_otp"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtDidNotReceiveOtp" />


    <Button
        android:id="@+id/btnContinue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/bg_button_pink_round"
        android:fontFamily="@font/poppins"
        android:text="@string/title_continue"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtResendOtp" />

</androidx.constraintlayout.widget.ConstraintLayout>